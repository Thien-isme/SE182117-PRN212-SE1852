<Window x:Class="BaiControl3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiControl3"
        mc:Ignorable="d"
        Title="RadioButton Control" Height="450" Width="800">
    <Grid Margin="20">
        <GroupBox Header="Bạn thấy hệ thống này thế nào" Margin="0,0,0,20">
            <StackPanel>
                <RadioButton GroupName="hethong" Name="radRatTot" Margin="0,5,0,0">
                    Rất tốt
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radTot" Margin="0,5,0,0">
                    Tốt
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radTamDuoc" Margin="0,5,0,0">
                    Tạm được
                </RadioButton>
                <RadioButton GroupName="hethong" Name="radKhongTot" Margin="0,5,0,0">
                    Không tốt
                </RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Giới tính của bạn là gì?" Height="Auto" VerticalAlignment="Top" Margin="0,100,0,0">
            <StackPanel Orientation="Vertical">
                <RadioButton GroupName="gioitinh" Name="radNam" Margin="0,5,0,0">
                    Nam
                </RadioButton>
                <RadioButton GroupName="gioitinh" Name="radNu" Margin="0,5,0,0">
                    Nữ
                </RadioButton>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>