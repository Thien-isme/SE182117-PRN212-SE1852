<Window x:Class="UserManagementWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserManagementWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="595" Width="800">
    <Grid>
        <Label Content="Danh Sách Users:" HorizontalAlignment="Left" Margin="45,29,0,0" VerticalAlignment="Top" FontSize="36"/>
        <ListBox x:Name="lbUser" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="45,87,85,289" FontSize="24" SelectionChanged="lbUser_SelectionChanged"/>
        <Label Content="Mã sản phẩm" HorizontalAlignment="Left" Margin="60,329,0,0" VerticalAlignment="Top" Height="25" Width="95"/>
        <Label Content="Tên sản phẩm" HorizontalAlignment="Left" Margin="60,359,0,0" VerticalAlignment="Top"/>
        <Label Content="Số lượng" HorizontalAlignment="Left" Margin="60,385,0,0" VerticalAlignment="Top"/>
        <Label Content="Đơn giá" HorizontalAlignment="Left" Margin="60,416,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMa" HorizontalAlignment="Left" Margin="160,333,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTen" HorizontalAlignment="Left" Margin="160,363,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSoLuong" HorizontalAlignment="Left" Margin="160,389,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDonGia" HorizontalAlignment="Left" Margin="160,420,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCapNhat" Content="Lưu mới" HorizontalAlignment="Left" Margin="290,459,0,0" VerticalAlignment="Top" Width="110" Click="btnCapNhat_Click"/>
        <Button Content="Lưu mới " HorizontalAlignment="Left" Margin="160,459,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>