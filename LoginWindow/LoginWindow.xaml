<Window x:Class="LoginWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginWindow"
        mc:Ignorable="d"
        Title="Dang nhap" Height="450" Width="800">
    <Grid>
        <Label Content="_Username"
                Target="{Binding ElementName=txtUsername}"       
        HorizontalAlignment="Left" Margin="55,54,0,0" VerticalAlignment="Top"/>
        <Label Content="_Password"
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" Margin="60,99,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="145,104,0,0" VerticalAlignment="Top" Width="160"/>
        <Button Content="Dang nhap" HorizontalAlignment="Left" Margin="148,134,0,0" VerticalAlignment="Top" AutomationProperties.Name="btnDangNhap" Click="Button_Click"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="145,59,0,0" TextWrapping="Wrap" Text="my user name" VerticalAlignment="Top" Width="155" AutomationProperties.Name="txtUsername"/>
        <Button Content="Thoat" HorizontalAlignment="Left" Margin="245,134,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
